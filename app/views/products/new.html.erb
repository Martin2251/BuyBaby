<div class="container m-3">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Add new product:</h2>
      <%= simple_form_for @product do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :category, collection: ["Boys-clothing", "Girls-clothing", "Playtime", "Nursery-furniture", "Pushchairs"] %>
        <%= f.input :colour %>
        <%= f.input :address %>
        <%= f.input :condition %>
        <%= f.input :size %>
        <%= f.input :price_cents, label: 'Price' %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit class: "btn btn-primary mt-2" %>
      <% end %>
      <%= link_to 'Back', products_path, class: "btn btn-primary mt-2" %>
    </div>
  </div>
</div>

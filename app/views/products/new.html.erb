<div class="container m-3">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Add new product:</h2>
      <%= simple_form_for @product do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :location %>
        <%= f.input :condition %>
        <%= f.input :size %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit %>
      <% end %>

      <%= link_to 'Back', products_path, class: "btn btn-green mt-2"  %>

    </div>
  </div>



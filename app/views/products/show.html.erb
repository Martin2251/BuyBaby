<div class="container">
  <div class="row mt-3 mb-3">
    <div class="col-md-6">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <% @product.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= 'active' if index == 0 %>">
              <%= cl_image_tag photo.key, height: 600, width: 600, crop: :fill, gravity: :center %>
            </div>
          <% end %>
          </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-md-6">
      <br>
      <h1> <%= @product.name.capitalize %></h1>
      <p><strong>Category: </strong><%=@product.category.capitalize %></p>
      <p><strong>Description: </strong><%=@product.description.capitalize %></p>
      <p><strong>Price: </strong><%= humanized_money_with_symbol(@product.price_cents) %></p>
      <p><strong>Location: </strong><%= @product.location.capitalize %></p>
      <div class="links list-inline">
        <p class="list-inline-item"><%= link_to products_path do %>
          <%= form_tag orders_path do %>
          <%= hidden_field_tag 'product_id', @product.id %>
          <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
          <% end %>
          <% end %>



<div class="container-main text-center m-3">
  <div class="categories d-flex justify-content-center">
      <div class="category mb-2">
        <h5><%= link_to "Toys", products_path(query: "Playtime"), class: "category-links" %></h5>
      </div>

      <div class="category">
        <h5><%= link_to "Boys Clothing", products_path(query: "Boys-clothing"), class: "category-links" %></h5>
      </div>

      <div class="category">
        <h5><%= link_to "Girls Clothing", products_path(query: "Girls-clothing"), class: "category-links" %></h5>
      </div>

      <div class="category">
        <h5><%= link_to "Nursery", products_path(query: "Nursery"), class: "category-links" %></h5>
      </div>

      <div class="category">
        <h5><%= link_to "Pushchairs", products_path(query: "Pushchairs"), class: "category-links" %></h5>
      </div>
  </div>

  <div class="text-slide mb-2">
    <h2 class="item-1 text-center">⭐️ Find excellent quality pre-loved items for your baby ⭐️</h2>
    <h2 class="item-2 text-center">⭐️ Sell unused clothes and make some money ⭐️</h2>
    <h2 class="item-3 text-center">⭐️ Support your local parent community ⭐️</h2>
  </div>

  <br>


  <div class="col-sm-9 car-col">
    <div id="buybaby" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#buybaby" data-slide-to="0" class="active"></li>
        <li data-target="#buybaby" data-slide-to="1"></li>
        <li data-target="#buybaby" data-slide-to="2"></li>
      </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag("babyplaying_resized.png", class: "d-block carousel-img" )%>
        <div class="container">
          <div class="carousel-caption text-left">
            <h1 class="carousel-heading">New arrivals</h1>
            <p>Check out our new finds this week!</p>
            <p>
              <a href="#" class="btn btn-sm btn-primary">View Items</a>
            </p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <%= image_tag("cot2_medium.jpg", class: "d-block carousel-img" )%>
         <div class="container">
           <div class="carousel-caption text-left">
              <h1 class="carousel-heading">Sale items</h1>
              <p>Bargains you will love</p>
              <p>
                <a href="#" class="btn btn-sm btn-primary">Go to sale</a>
              </p>
           </div>
        </div>
      </div>

      <div class="carousel-item">
        <%= image_tag("nursery_resized.png", class: "d-block carousel-img" )%>
         <div class="container">
           <div class="carousel-caption text-left">
              <h1 class="carousel-heading">Swap & save</h1>
              <p>Preloved items you don't want to miss!</p>
              <p>
                <a href="#" class="btn btn-sm btn-primary">Swap today</a>
              </p>
           </div>
        </div>
      </div>

      <a class="carousel-control-prev" href="#buybaby" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#buybaby" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    </div>
  </div>



  <div class="divider" style="display: flex;">
    <hr style="width:40%;text-align:left;margin-left:0;margin-right:0;margin-top: 40px;">
      <%= image_tag("logo.png", width: "90px", height: "90px", class: "logo" )%>
    <hr style="width:40%;text-align:left;margin-left:0;margin-right:0;margin-top: 40px;">
  </div>

   <div class="category-headings">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="divider" style="margin: 0 auto">
            <h3 class="mx-2">Toys</h3>
        </div>
      </div>

      <div class="col-md-4">
        <div class="divider" style="margin: 0 auto">
            <h3 class="mx-2">Nursery</h3>
        </div>
      </div>

      <div class="col-md-4">
        <div class="divider" style="margin: 0 auto">
            <h3 class="mx-2">Pushchairs</h3>
        </div>
      </div>
    </div>
  </div>

    <div class="category-cards">
      <div class="card-deck">
          <div class="card text-white" style="height:16rem; width:16rem;">
            <%= image_tag('toys.jpg', class: 'card-img', alt: 'Card image')%>
            <%= link_to products_path(query: "Playtime"), class: "card-img-overlay" do %>
              <h5 class="card-title category-card-title">Toys</h5>
              <p class="card-text category-text">Playtime & Fun</p>
            <% end %>
          </div>

          <div class="card text-white" style="height:16rem; width:16rem;">
            <%= image_tag('nursery1.jpeg', class: 'card-img', alt: "Card image") %>
            <%= link_to products_path(query: "Nursery"), class: "card-img-overlay" do %>
              <h5 class="card-title category-card-title">Nursery</h5>
              <p class="card-text category-text">For your home</p>
            <% end %>
          </div>


          <div class="card text-white" style="height:16rem; width:16rem;">
            <%= image_tag('pushchair_forest.jpg', class: 'card-img', alt: "Card image") %>
            <%= link_to products_path(query: "Pushchairs"), class: "card-img-overlay" do %>
              <h5 class="card-title category-card-title">Pushchair</h5>
              <p class="card-text category-text">Enjoy the outdoors</p>
            <% end %>
          </div>
      </div>
    </div>


  <div class="category-headings">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="divider" style="margin: 0 auto">
            <h3 class="mx-2">Sale</h3>
        </div>
      </div>

      <div class="col-md-4">
        <div class="divider" style="margin: 0 auto">
            <h3 class="mx-2">New in</h3>
        </div>
      </div>

      <div class="col-md-4">
        <div class="divider" style="margin: 0 auto">
            <h3 class="mx-2">Swap</h3>
        </div>
      </div>
    </div>
  </div>

  <div class="category-cards">
    <div class="card-deck">
          <div class="card text-white" style="height:16rem; width:16rem;">
            <%= image_tag('sale.jpg', class: 'card-img', alt: 'Card image') %>
            <%= link_to products_path(query: "sell"), class: "card-img-overlay" do %>
              <h5 class="card-title category-card-title">Sale</h5>
              <p class="card-text category-text">Up to 50% off</p>
            <% end %>
          </div>

          <div class="card text-white" style="height:16rem; width:16rem;">
            <%= image_tag('new arrivals.jpg', class: 'card-img', alt: 'Card image')  %>
            <%= link_to products_path, class: "card-img-overlay" do %>
              <h5 class="card-title category-card-title">New arrivals</h5>
              <p class="card-text category-text">Discover more</p>
            <% end %>
          </div>


          <div class="card text-white" style="height:16rem; width:16rem;">
            <%= image_tag('swap.jpg', class: 'card-img', alt: 'Card image') %>
            <%= link_to products_path(query: "swap"), class: "card-img-overlay" do %>
              <h5 class="card-title category-card-title">Swap</h5>
              <p class="card-text category-text">Preloved items</p>
            <% end %>
          </div>
      </div>
    </div>

  <div class="divider" style="display: flex;">
    <hr style="width:32%;text-align:left;margin-left:0;margin-right:0;margin-top: 15px;">
      <h4 class="title mb-3 mx-2">Search local items near you:</h4>
    <hr style="width:32%;text-align:left;margin-left:0;margin-right:0;margin-top: 15px;">
  </div>

  <div class= "position-relative"
    id="map"
    style="width: 100%; height: 400px; left:20%;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <br>

  <div class="section s4 p-3">
    <div class="divider" style="display: flex; margin-bottom: 25px;">
      <hr style="width:40%;text-align:left;margin-left:0;margin-right:0;margin-top: 15px;">
        <h4 class="title mb-3 mx-2">Featured Items</h4>
      <hr style="width:40%;text-align:left;margin-left:0;margin-right:0;margin-top: 15px;">
      <br>
    </div>

     <div class="cards d-flex flex-wrap position-relative justify-content-center">
      <% @featured_products.each do |product| %>
        <div class="card rounded-lg mb-4 mx-3" style="width: 16rem; height: 28rem;">
          <div class="card-body">
            <%= link_to product_path(product) do %>
              <% product.photos.each_with_index do |photo, index| %>
                <%= cl_image_tag photo.key, height: 200, width: 200, crop: :fill, gravity: :center %>
              <% end %>
            <% end %>
            <%= link_to product_path(product) do%>
              <h5 class="card-title mt-1"><%= product.name.capitalize %></h5>
              <p class="card-text m-0" style="font-size: 14px">Category: <%= product.category %></p>
              <p class="card-text m-0" style="font-size: 14px">Condition: <%= product.condition %></p>
              <p class="card-text m-0" style="font-size: 14px">Sale type: <%= product.sale_type %></p>
              <% if product.price_cents > 0 %>
                <p class="card-text m-0" style="font-size: 20px">£<%= product.price_cents %></p>
              <% end %>
            <% end %>
            <div class="rating text-center position-absolute">
              <%= link_to save_item_product_path(product), remote: true, method: :post do %>
                <%= render 'products/like_button', product: product %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-main text-center m-3">
   <div class="categories d-flex">
      <div class="category">
        <h5><%= link_to "Toys", products_path(query: "Playtime"), class: "category-links" %></h5>
      </div>

      <div class="category">
        <h5><%= link_to "Boys Clothing", products_path(query: "Boys-clothing"), class: "category-links" %></h5>
      </div>

      <div class="category">
        <h5><%= link_to "Girls Clothing", products_path(query: "Girls-clothing"), class: "category-links" %></h5>
      </div>

      <div class="category">
        <h5><%= link_to "Nursery", products_path(query: "Nursery"), class: "category-links" %></h5>
      </div>

      <div class="category">
        <h5><%= link_to "Pushchairs", products_path(query: "Pushchairs"), class: "category-links" %></h5>
      </div>
    </div>
  </div>

  <div class="container-carousel">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag("babyplaying.jpg", class: "d-block homepage-image" )%>
      </div>

      <div class="carousel-item">
        <%= image_tag("cot.jpg", class: "d-block homepage-image" )%>
      </div>

      <div class="carousel-item">
        <%= image_tag("nursery2.jpg", class: "d-block homepage-image" )%>
      </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    </div>
  </div>

<div class="animated-logo">
  <%= image_tag("logo.png", width: "120px", height: "120px", class: "logo" )%>
</div>

<div class="categories-section">
  <div class="card-columns">
    <div class="card">
      <%= image_tag("toys.jpg", class: "Card-image" )%>

<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-3 text-center">Your Orders</h1>
    </div>
  </div>
  <div class="row">
    <% @orders.each do |order| %>
    <div class="col mb-3">
      <% if order.state == "completed" %>
      <div class="card shadow-none rounded-lg mb-3" style="width: 60rem; height: auto;">
        <div class="card-header">
          Order # <%= order.id %>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-12">
              <h5>Order placed on <%= order.updated_at.strftime("%d/%m/%Y") %></h5>
              <h5>Paid by: <span class="order-option"><%= order.payment_option %></span></h5>
              <h5>Shipped by: <span class="order-option"><%= order.delivery_option %></span></h5>
              <h5>Total: <span class="order-option">£<%= order.total_price %></span></h5>
              <h5 class="my-3">Item(s) ordered:</h5>
              <% order.products.each do |product_order| %>
              <div class="row">
                <div class="col-8 mb-3 d-flex">
                  <% product_order.photos.each_with_index do |photo, index| %>
                  <%= cl_image_tag photo.key, height: 200, width: 200, crop: :fill, gravity: :center %>
                  <% end %>
                  <div class="pl-3">
                  <p><%= product_order.name %></p>
                  <p ><%= product_order.description %></p>
                  <p>£<%= product_order.price_cents %></p>
                  </div>
                </div>
                <div class="col-4 d-flex flex-column">
                  <p class="card-text">Sold by: <%= product_order.user.nickname %></p>
                  <a href="https://wa.me/447709793973?text=Please%20contact%20me%20about%20this%20product%20listing" target="blank" class="btn btn-primary text-white mb-3">Contact seller via WhatsApp</a>
                  <%= link_to "Write a review", new_user_review_path(product_order.user, product:product_order), class: "btn btn-success text-white mb-1" %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
   <% end %>
  </div>
  <div class="container">
    <%= link_to "Back", request.referer.present? ? request.referer : default_path, class: "btn btn-primary text-white mb-3" %>
  </div>
</div>

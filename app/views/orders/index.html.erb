<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-3">Your Orders</h1>
    </div>
  </div>
  <div class="row">
    <% @orders.each do |order| %>
    <div class="col mb-3">
      <% if order.state == "completed" %>
      <div class="card shadow-none rounded-lg mb-3" style="width: 60rem; height: 20rem;">
        <div class="card-header">
          Order # <%= order.id %>
          <%= order.state %>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-8">
              <h5 class="card-title">Order placed at: </h5>
              <div class="row">
                <div class="col-4">
                  <%= image_tag "https://via.placeholder.com/200", alt: "placeholder" %>
                </div>
                <div class="col-8 d-flex flex-column">
                  <p class="card-text">Order description</p>
                  <p class="card-text">Order total: Â£<%= order.amount %></p>
                  <p class="card-text">Seller name: <%= order.products[0].user.nickname %></p>
                  <p class="card-text">Payment info: <%= order.payment_option %></p>
                  <p class="card-text">Delivery info: <%= order.delivery_option %></p>
                </div>
              </div>
            </div>
            <div class="col-4 d-flex flex-column">
              <a href="https://wa.me/447709793973?text=Please%20contact%20me%20about%20this%20product%20listing" target="blank" class="btn btn-primary text-white mb-1">Contact seller via WhatsApp</a>
              <% order.products.each do |product_order| %>
                <%= link_to "Write a seller review", new_user_review_path(product_order.user, product:product_order), class: "btn btn-primary text-white mb-1" %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
<% end %>
  </div>
  <div class="container">
<%= link_to "Back", request.referer.present? ? request.referer : default_path, class: "btn btn-primary text-white mb-3" %>
</div>
</div>


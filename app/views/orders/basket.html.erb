<div class="container">
  <div class="row">
    <div class="col-md-12 mt-4 text-center">
      <h1>Your basket</h1>
    </div>
  </div>
</div>
<div class="container">
  <% @orders.each do |order| %>
  <h5>Hi <%= order.user.name.capitalize %> !</h5>
  <h5>You have <%= order.product_orders.count %> items in your basket.</h5>
  <h5>Review shopping basket : </h5>
  <div class="card-body">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-2 text-center">
        <img class="img-responsive" src="http://placehold.it/120x80" alt="prewiew" width="120" height="80">
      </div>
      <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
        <% order.product_orders.each do |item| %>
        <h5><strong><%= item.product.name %></strong></h5>
        <p><%= item.product.description %></p>
      </div>
      <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
        <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
          <h6><strong><%= item.product.price %><span class="text-muted"> x</span></strong></h6>
        </div>
        <div class="col-4 col-sm-4 col-md-4">
          <div class="quantity">
            <input type="button" value="+" class="plus">
            <input type="number" step="1" max="99" min="1" value="1" title="Qty" class="qty" size="4">
            <input type="button" value="-" class="minus">
          </div>
        </div>
        <div class="col-2 col-sm-2 col-md-2 text-right">
          <button type="button" class="btn btn-outline-danger btn-xs">
            <%= link_to orders_path, method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          </button>
        </div>
      </div>
    </div>
    <hr>
    <div class="d-flex justify-content-end">
      <%= link_to 'Update basket', orders_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between">
    <span><h5>Total price: <b>Â£50</b></h5></span>
    <%= link_to 'Checkout', orders_path, class: "btn btn-success" %>
  </div>
<% end %>
<% end %>
</div>


